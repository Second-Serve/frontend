<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/restaurant_search_back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_arrow"
        android:contentDescription="@string/back_arrow_description"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="8dp" />

    <ImageView
        android:id="@+id/restaurantImage"
        android:layout_width="344dp"
        android:layout_height="163dp"
        android:scaleType="centerCrop"
        android:src="@drawable/baseline_restaurant_menu_24"
        android:contentDescription="@string/restaurant_banner_content_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/restaurant_search_back_arrow" />

    <TextView
        android:id="@+id/restaurant_name_input"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Pizza Guys Co."
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/restaurantImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/restaurantPrice"
        android:padding="8dp"
        android:background="@color/red" />

    <TextView
        android:id="@+id/restaurantPrice"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/restaurant_bag_price"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/restaurant_name_input"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"
        android:background="@color/red" />

    <TextView
        android:id="@+id/bagsAvailable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/restaurant_bag_count"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/restaurant_name_input"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:padding="4dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/pickupTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/restaurant_pickup_label"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/bagsAvailable"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/pickupDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/restaurant_page_available_time"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/pickupTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/locationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/restaurant_location_label"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/pickupDetails"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/locationDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123 State St, Madison, WI 53703"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/locationTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp" />

    <Button
        android:id="@+id/addToCartButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/add_to_cart_button"
        android:backgroundTint="@color/red"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>