<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"

tools:context=".MainActivity">


<TextView
    android:id="@+id/signUpTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:text="Sign Up:"
    android:textColor="#B22222"
    android:textSize="32sp"
    android:textStyle="bold"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />


<TextView
    android:id="@+id/nameLabel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Your Name:"
    android:textSize="18sp"
    android:textColor="#B22222"
    android:layout_marginStart="16dp"
    android:layout_marginTop="24dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/signUpTitle" />

<EditText
    android:id="@+id/firstNameInput"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:hint="First Name"
    android:background="@drawable/rounded_border"
    android:padding="12dp"
    android:textColor="#000000"
    android:textSize="16sp"
    app:layout_constraintTop_toBottomOf="@id/nameLabel"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintWidth_percent="0.45"
    android:layout_marginStart="16dp" />

<EditText
    android:id="@+id/lastNameInput"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:hint="Last Name"
    android:background="@drawable/rounded_border"
    android:padding="12dp"
    android:textColor="#000000"
    android:textSize="16sp"
    app:layout_constraintTop_toBottomOf="@id/nameLabel"
    app:layout_constraintStart_toEndOf="@id/firstNameInput"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="16dp" />


<TextView
    android:id="@+id/restaurantNameLabel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="24dp"
    android:text="Restaurant Name:"
    android:textColor="#B22222"
    android:textSize="18sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/firstNameInput" />

<EditText
    android:id="@+id/restaurantName"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:hint="Enter Restaurant Name"
    android:background="@drawable/rounded_border"
    android:padding="12dp"
    android:textColor="#000000"
    android:textSize="16sp"
    app:layout_constraintTop_toBottomOf="@id/restaurantNameLabel"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp" />


<TextView
    android:id="@+id/addressLabel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Address:"
    android:textSize="18sp"
    android:textColor="#B22222"
    android:layout_marginTop="24dp"
    app:layout_constraintTop_toBottomOf="@id/restaurantName"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="16dp" />

<EditText
    android:id="@+id/address"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:hint="Enter Address"
    android:background="@drawable/rounded_border"
    android:padding="12dp"
    android:textColor="#000000"
    android:textSize="16sp"
    app:layout_constraintTop_toBottomOf="@id/addressLabel"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp" />


<TextView
    android:id="@+id/pickupHoursLabel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Pickup Hours:"
    android:textSize="18sp"
    android:textColor="#B22222"
    android:layout_marginTop="24dp"
    app:layout_constraintTop_toBottomOf="@id/address"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="16dp" />

<EditText
    android:id="@+id/startTime"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:hint="Start Time (e.g., 9:00 AM)"
    android:background="@drawable/rounded_border"
    android:padding="12dp"
    android:textColor="#FFFFFF"
    android:textSize="16sp"
    app:layout_constraintTop_toBottomOf="@id/pickupHoursLabel"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintWidth_percent="0.45"
    android:layout_marginStart="16dp" />

<EditText
    android:id="@+id/endTime"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:hint="End Time (e.g., 5:00 PM)"
    android:background="@drawable/rounded_border"
    android:padding="12dp"
    android:textColor="#000000"
    android:textSize="16sp"
    app:layout_constraintTop_toBottomOf="@id/pickupHoursLabel"
    app:layout_constraintStart_toEndOf="@id/startTime"
    app:layout_constraintWidth_percent="0.45"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="16dp" />


<Button
    android:id="@+id/continueButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:text="Continue"
    android:padding="12dp"
    android:backgroundTint="#B22222"
    android:textColor="#000000"
    app:layout_constraintTop_toBottomOf="@id/endTime"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>